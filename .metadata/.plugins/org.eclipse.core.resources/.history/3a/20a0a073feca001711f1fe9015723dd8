package model;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.time.format.FormatStyle;
import java.util.Arrays;
import java.util.List;
import java.util.Optional;
import java.util.stream.Collectors;

/**
 * @author Openwebinars
 *
 */
public class App {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		
		List<Libro> biblioteca = initData();
		
		
//		biblioteca
//			.stream()
//			.collect(Collectors.groupingBy((Libro l) -> l.getAutor().getNombre(), Collectors.counting()))
//			.forEach((autor, numLibros) -> {
//				System.out.println("Autor: " + autor + " (" + numLibros + ")");
//			});
		
		biblioteca
			.stream()
			.map(l -> Optional.ofNullable(l))
			.flatMap(Libro::getAutor)
			.flatMap(Autor::getFechaNacimiento)
			.forEach(System.out::println);
		
		
		

	}
	
	public static List<Libro> initData() {
		
		Autor kenFollet = new Autor("Ken Follet", Optional.of(LocalDate.of(1949, 6, 5)));
		Autor homero = new Autor("Homero", null);
		
		return Arrays.asList(
				new Libro("Los Pilares de la Tierra", Optional.of(kenFollet), "1989", "9788401328510"),
				new Libro("Un mundo sin fin", Optional.of(kenFollet), "2007", "9788401019609"),
				new Libro("La Odisea", Optional.of(homero), null, null),
				new Libro("La Iliada", Optional.of(homero), null, null),
				new Libro("Cantar del Mío Cid", null, null, null)
				);
		
	}

}
